<Window x:Class="Snipr.Views.RectangleSelectionOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">

    <Grid>
        <!-- Desktop screenshot background -->
        <Image x:Name="DesktopImage"
               Stretch="None"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <!-- Dim overlay with hole for selection -->
        <Canvas x:Name="DimCanvas"
                MouseLeftButtonDown="OnMouseLeftButtonDown"
                MouseMove="OnMouseMove"
                MouseLeftButtonUp="OnMouseLeftButtonUp"
                Background="Transparent">
            <Path x:Name="DimPath" Fill="#80000000"/>
        </Canvas>

        <!-- Selection rectangle border -->
        <Canvas x:Name="SelectionCanvas" IsHitTestVisible="False">
            <Border x:Name="SelectionBorder"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="2"
                    Visibility="Collapsed"/>
        </Canvas>

        <!-- Instructions -->
        <Border Background="#E0000000"
                CornerRadius="0"
                Padding="16,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0">
            <TextBlock Text="Click and drag to select a region. Press ESC to cancel."
                       Foreground="White"
                       FontFamily="Segoe UI"
                       FontSize="14"/>
        </Border>
    </Grid>
</Window>
